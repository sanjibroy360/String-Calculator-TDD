{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@types": ["types/index"],
      "@calculator": ["calculator"],
      "@stringCalculator": ["index"],
      "@stringCalculator/tests": ["__tests__/index.test"]
    }
  },
  "include": ["src/**/*", "src/__tests__/**/*"]
}
